<div class="form-horizontal">
  <%= form_for @contact do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :name, placeholder: "Contact name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :email, placeholder: "Email name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :description, placeholder: "Description", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :job_title, class: "col-sm-1 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :job_title, placeholder: "Job title", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-2">
          <%= f.submit "Save", class: "btn btn-default" %>
        </div>
      </div>
  <% end %>
</div>
