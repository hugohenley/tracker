<div class="nested-fields">
  <div class="form-group">
    <%= f.label :contact, class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.select :contact_id, Contact.all.map { |contact| [contact.name, contact.id] }, {}, {class: "form-control"} %>
    </div>

    <div class="col-sm-2">
      <%= link_to_remove_association "remove contact", f %>
    </div>
  </div>

</div>
